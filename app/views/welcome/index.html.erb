<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <h1>jTunes</h1>
    <p>Here's the exercise</p>
    <p><a class="btn btn-primary btn-lg">WHAT? OK! &raquo;</a></p>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
    <div class="col-lg-6">
      <h2>New Releases</h2>
      <table>
        <thead>
          <tr>
            <th>Artist</th>
            <th>Album</th>
            <th>Release Date</th>
          </tr>
        </thead>
        <tbody>
        <% @new_releases.each do |album| %>
          <tr>
            <td><%= album.artist.name %></td>
            <td><%= album.name %></td>
            <td><%= album.release_date.strftime("%b. %d %Y") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-6">
      <h2>Top Tracks</h2>
      <table>
        <thead>
          <tr>
            <th>Artist</th>
            <th>Album</th>
            <th>Song</th>
            <th>Play count</th>
          </tr>
        </thead>
        <tbody>
        <% @top_tracks.each do |song| %>
          <tr>
            <td><%= song.artist.name %></td>
            <td><%= song.album.name %></td>
            <td><%= song.name %></td>
            <td><%= song.play_count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
